prepare() {
  cd "$tmp"/$nom/$nom-$nom-$ver
}

configure() {
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --libdevdir=/usr/lib \
    --use-libc
}

build() {
  make
}

package() {
  make \
    DESTDIR="$dir" \
    install
}
