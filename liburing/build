prepare() {
  :
}

configure() {
  ./configure \
    --prefix=/usr \
    --includedir=/usr/include \
    --libdir=/usr/lib \
    --libdevdir=/usr/lib \
    --mandir=/usr/share/man \
    --datadir=/usr/share \
    --use-libc
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
