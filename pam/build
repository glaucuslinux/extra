prepare() {
  autoreconf -vfis
}

configure() {
  LIBS='-lutmps -lskarnet' \
  glaucus-configure \
    --disable-doc \
    --disable-examples \
    --disable-db \
    --disable-selinux \
    --enable-openssl \
    --disable-regenerate-docu \
    --disable-nls \
    --disable-rpath \
    --enable-lastlog
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  chmod -v 4755 "$SACD"/usr/bin/unix_chkpwd
}
