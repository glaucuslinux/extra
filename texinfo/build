prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-threads=posix \
    --disable-rpath \
    --disable-nls
}

build() {
  make
}

check() {
  :
}

package() {
  if [ $BOOTSTRAP = yes ]; then
    make \
      install-strip
  fi

  make \
    DESTDIR="$SACD" \
    install-strip
}
