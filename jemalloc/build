prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-documentation \
    --disable-static \
    --disable-zone-allocator
}

build() {
  make \
    build_lib_shared
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install_bin \
    install_include \
    install_lib_shared
}
