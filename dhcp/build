prepare() {
  cp -fPp $core/binutils/config.guess .
  cp -fPp $core/binutils/config.sub .

  # bind mess
  tar xvf bind/bind.tar.gz -C bind

  cp -fPp $core/binutils/config.guess bind/bind-9.11.36
  cp -fPp $core/binutils/config.sub bind/bind-9.11.36

  cp -fPp $core/binutils/config.guess bind/bind-9.11.36/contrib/dnsperf-2.1.0.0-1
  cp -fPp $core/binutils/config.sub bind/bind-9.11.36/contrib/dnsperf-2.1.0.0-1

  cp -fPp $core/binutils/config.guess bind/bind-9.11.36/contrib/idn/idnkit-1.0-src
  cp -fPp $core/binutils/config.sub bind/bind-9.11.36/contrib/idn/idnkit-1.0-src

  patch \
    -i $core/$nom/patches/gentoo/$nom-4.4.3-fix-perms.patch.patch \
    -p 1

  patch \
    -i $core/$nom/patches/openembedded/0001-workaround-busybox-limitation-in-linux-dhclient-script.patch \
    -p 1
}

configure() {
  CFLAGS="$CFLAGS -D_PATH_DHCPD_CONF='\"/etc/$nom/${nom}d.conf\"' -D_PATH_DHCLIENT_CONF='\"/etc/$nom/dhclient.conf\"'" \
  glaucus-configure \
    --enable-dhcpv4o6 \
    --enable-paranoia \
    --enable-log-pid \
    --enable-binary-leases \
    --with-srv-conf-file=/etc/$nom/${nom}d.conf \
    --with-srv-lease-file=/var/lib/$nom/${nom}d.leases \
    --with-srv6-lease-file=/var/lib/$nom/${nom}d6.leases \
    --with-cli-lease-file=/var/lib/$nom/dhclient.leases \
    --with-cli6-lease-file=/var/lib/$nom/dhclient6.leases \
    --with-srv-pid-file=/run/$nom/${nom}d.pid \
    --with-srv6-pid-file=/run/$nom/${nom}d6.pid \
    --with-cli-pid-file=/run/$nom/dhclient.pid \
    --with-cli6-pid-file=/run/$nom/dhclient6.pid \
    --with-relay-pid-file=/run/$nom/dhcrelay.pid \
    --with-relay6-pid-file=/run/$nom/dhcrelay6.pid
}

build() {
  make
}

package() {
  make \
    DESTDIR=$dir \
    install-strip

  mv -f $dir/etc/$nom/dhclient.conf.example $dir/etc/$nom/dhclient.conf
  cp -fPp doc/examples/dhclient-${nom}v6.conf $dir/etc/$nom/dhclient6.conf
  mv -f $dir/etc/$nom/${nom}d.conf.example $dir/etc/$nom/${nom}d.conf
  cp -fPp doc/examples/${nom}d-${nom}v6.conf $dir/etc/$nom/${nom}d6.conf

  cp -fPp client/scripts/linux $dir/usr/bin/dhclient-script

  rm -fv \
    $dir/usr/lib/lib$nom.a \
    $dir/usr/lib/lib${nom}ctl.a \
    $dir/usr/lib/libomapi.a

  mkdir -p \
    $dir/run/$nom \
    $dir/var/lib/$nom
}
