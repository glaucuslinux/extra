prepare() {
  mkdir -pv build
  cd build
}

configure() {
  # `CC`, `AR`, `CFLAGS` and `LDFLAGS` have to be specified, otherwise they
  # won't be read, and `--disable-static` implies `--enable-shared`.
  "$TMPD"/$nom/$nom-$ver/configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --datarootdir=/usr/share \
    --includedir=/usr/include \
    --infodir=/usr/share/info \
    --libdir=/usr/lib \
    --mandir=/usr/share/man \
    --disable-static \
    CC=$CC \
    AR=$AR \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

build() {
  make
}

package() {
  # `install-bin-strip` ensures that the `minilzip` binary is installed
  make \
    DESTDIR="$SACD" \
    install-bin-strip \
    install-strip
}
