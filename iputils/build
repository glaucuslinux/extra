configure() {
  glaucus-muon \
    -DUSE_IDN=false \
    -DBUILD_MANS=false \
    -DUSE_GETTEXT=false \
    -DSKIP_TESTS=true \
    build
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$dir" \
  muon \
    -C build \
    install

  ln -fs ping "$dir"/usr/bin/ping6
  ln -fs tracepath "$dir"/usr/bin/tracepath6
}
