prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-fix-man-page.patch \
    -p 0
}

configure() {
  glaucus-muon \
    -Dinstall_systemd=false \
    -Dlocategroup=locate \
    -Dupdatedb_progname=pupdatedb \
    build
}

build() {
  samu \
    -C build
}

package() {
  DESTDIR="$dir" \
  muon \
    -C build \
    install

  cp -fPp "$core"/$nom/files/updatedb.conf "$dir"/etc

  # Compatibility symlinks
  for i in locate mlocate slocate; do
    ln -fs $nom "$dir"/usr/bin/$i
  done
  ln -fs pupdatedb "$dir"/usr/bin/updatedb

  ln -fs $nom "$dir"/var/lib/locate
}
