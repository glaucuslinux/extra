prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-doxygen-doc \
    --disable-doxygen-dot \
    --disable-doxygen-html \
    --with-bzip2 \
    --with-xz \
    --with-lzo \
    --with-lz4 \
    --with-zstd \
    --with-gzip
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
