prepare() {
  cd "$tmp"/$nom/$nom-$ver-stable

  ./autogen.sh
}

configure() {
  "$core"/autoconf/files/glaucus-configure \
    --build=$BUILD \
    --host=$CTARGET \
    --enable-opensslall \
    --enable-opensslextra \
    --enable-all
}

build() {
  make
}

package() {
  make \
    DESTDIR="$cross" \
    install-strip

  ln -fs $nom/openssl "$cross"/usr/include

  for i in libcrypto libssl libtls; do
    ln -fs lib$nom.so "$cross"/usr/lib/$i.so
    ln -fs $nom.pc "$cross"/usr/lib/pkgconfig/$i.pc
  done
}
