prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-nls \
    --disable-rpath \
    --enable-optional-progs \
    --disable-vlock \
    --disable-tests
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fs openvt "$SACD"/usr/bin/open

  rm -fRv \
    "$SACD"/usr/share/keymaps/amiga \
    "$SACD"/usr/share/keymaps/atari \
    "$SACD"/usr/share/keymaps/i386/qwerty/ro_win.map.gz \
    "$SACD"/usr/share/keymaps/sun
}
