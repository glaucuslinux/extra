prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/files/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --without-pcre2 \
    --without-boost-regex \
    --without-zlib \
    --without-brotli \
    --without-bzip3 \
    --without-bash-completion-dir \
    --without-fish-completion-dir \
    --without-zsh-completion-dir
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

for i in egrep fgrep grep ug; do
  ln -fs $nom "$CRSD"/usr/bin/$i
done
  ln -fs $nom+ "$CRSD"/usr/bin/ug+
}
