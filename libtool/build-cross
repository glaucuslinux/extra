prepare() {
  patch \
    -i "$core"/$nom/patches/alpine/$nom-fix-cross-compile.patch \
    -p 1
}

configure() {
  "$core"/autoconf/files/glaucus-configure \
    --build=$BUILD \
    --host=$CTARGET \
    --disable-static \
    --enable-pic \
    --enable-ltdl-install
}

build() {
  make
}

package() {
  make \
    DESTDIR="$cross" \
    install-strip

  # Remove libtool archive
  rm -fv "$cross"/usr/lib/libltdl.la
}
