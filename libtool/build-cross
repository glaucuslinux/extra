prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/$nom-fix-cross-compile.patch \
    -p 1
}

configure() {
  "$CERD"/autoconf/files/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --disable-static \
    --enable-pic \
    --enable-ltdl-install
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  # Remove libtool archive
  rm -fv "$CRSD"/usr/lib/libltdl.la
}
