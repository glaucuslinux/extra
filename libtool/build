prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/$nom-fix-cross-compile.patch \
    -p 1
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --enable-ltdl-install
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
