prepare() {
  patch \
    -i $CERD/$nom/patches/alpine/fix-uninitialized.patch \
    -p 1
  patch \
    -i $CERD/$nom/patches/alpine/musl-macros.patch \
    -p 1

  autoreconf -vfis
}

configure() {
  CFLAGS="$CFLAGS -Wno-error" \
  glaucus-configure \
    --enable-deterministic-archives \
    --enable-install-elfh \
    --disable-symbol-versioning \
    --disable-nls \
    --disable-rpath \
    --disable-libdebuginfod \
    --disable-debuginfod \
    --with-zlib \
    --with-bzlib \
    --with-lzma \
    --with-zstd
}

build() {
  make
}

package() {
  make \
    DESTDIR=$SACD \
    install-strip
}
