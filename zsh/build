prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-pcre \
    --enable-cap \
    --enable-multibyte \
    --enable-libc-musl
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
