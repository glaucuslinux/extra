configure() {
  ./configure \
    --prefix=/usr \
    --bindir=/usr/bin \
    --mandir=/usr/share/man \
    --enable-lto
}

build() {
  # netbsd-curses compatibility
  LIBS=-lterminfo \
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  cp -afv "$CERD"/$nom/files/ksh.kshrc "$SACD"/etc

  ln -fnsv $nom "$SACD"/usr/bin/ksh
  ln -fnsv $nom "$SACD"/usr/bin/rksh
}
