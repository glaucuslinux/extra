configure() {
  ./configure \
    --prefix=/usr \
    --enable-lto
}

build() {
  # netbsd-curses compatibility
  LIBS=-lterminfo \
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  cp -fPp "$CERD"/$nom/files/ksh.kshrc "$SACD"/etc

  ln -fs $nom "$SACD"/usr/bin/ksh
  ln -fs $nom "$SACD"/usr/bin/rksh
}
