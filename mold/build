configure() {
  glaucus-cmake \
    -B build \
    -DBUILD_TESTING=OFF \
    -DMOLD_LTO=ON \
    -DMOLD_USE_MOLD=ON \
    -DMOLD_USE_SYSTEM_MIMALLOC=ON
}

build() {
  make \
    -C build
}

package() {
  DESTDIR="$SACD" \
  make \
    -C build \
    install/strip

  ln -fs $nom "$SACD"/usr/bin/ld
}
