configure() {
  glaucus-configure \
    --enable-threads=posix \
    --disable-nls \
    --disable-rpath \
    --disable-efiemu \
    --enable-stack-protector \
    --disable-mm-debug \
    --enable-cache-stats \
    --enable-boot-time \
    --disable-grub-emu-sdl2 \
    --disable-grub-emu-sdl \
    --disable-grub-mkfont \
    --disable-grub-themes \
    --enable-device-mapper \
    --disable-liblzma \
    --disable-libzfs \
    --disable-werror \
    --with-bootdir=/boot \
    --with-grubdir=$nom \
    --without-included-regex \
    --without-dejavufont \
    --without-unifont
}

build() {
  make
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip
}
