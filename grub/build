prepare() {
  patch \
    -i "$CERD"/$nom/patches/clear/0001-Lower-test-timeout.patch \
    -p 1

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-threads=posix \
    --disable-nls \
    --disable-rpath \
    --disable-efiemu \
    --disable-grub-mkfont \
    --enable-grub-themes \
    --enable-device-mapper \
    --disable-liblzma \
    --enable-libzfs \
    --disable-werror \
    --without-included-regex
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
