prepare() {
  patch \
    -i "$extra"/$nom/patches/glaucus/0001-aws-lc-compatibility.patch \
    -p 0

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-threads=posix \
    --disable-rpath \
    --disable-static \
    --enable-pic \
    --disable-nls \
    --disable-doc \
    --with-linux-crypto \
    --without-included-regex \
    --with-ssl=openssl \
    --without-libdane \
    --without-libpsl \
    --without-libhsts \
    --without-libnghttp2 \
    --without-gpgme \
    --with-bzip2 \
    --with-lzma \
    --without-brotlidec \
    --without-lzip \
    --without-libidn2 \
    --without-libidn \
    --without-libpcre \
    --without-libmicrohttpd
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip

  ln -fs $nom "$dir"/usr/bin/wget
  rm -fv "$dir"/usr/bin/${nom}_noinstall
}
