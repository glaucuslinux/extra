prepare() {
  for i in \
  0001-Allow-input-files-to-be-missing-for-ed-style-${nom}es \
  0002-Fix-arbitrary-command-execution-in-ed-style-${nom}es- \
  CVE-2018-6951 \
  CVE-2018-6952 \
  CVE-2019-13636 \
  CVE-2019-13638 \
  CVE-2019-20633; do
    $nom -p1 -i "$CERD"/$nom/${nom}es/alpine/$i.$nom
  done
  
  autoreconf -vfis
}

configure() {
  glaucus-configure
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  rm -fv "$SACD"/usr/lib/charset.alias
}
