prepare() {
  :
}

configure() {
  mkdir -pv kernel/x86/microcode
}

build() {
  iucode_tool \
    --write-earlyfw=$nom.img $nom/ $nom-with-caveats/ \
    --overwrite
}

check() {
  :
}

package() {
  mkdir -pv "$SACD"/boot
  mv -fv $nom.img "$SACD"/boot
}
