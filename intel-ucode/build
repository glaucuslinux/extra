configure() {
  mkdir -p kernel/x86/microcode
}

build() {
  iucode_tool \
    --write-earlyfw=$nom.img $nom/ $nom-with-caveats/ \
    --overwrite
}

package() {
  mkdir -p "$dir"/boot
  mv -f $nom.img "$dir"/boot
}
