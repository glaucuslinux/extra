prepare() {
  autoreconf -vfis
}

configure() {
  "$core"/autoconf/files/glaucus-configure \
    --build=$BUILD \
    --host=$CTARGET \
    --enable-pic \
    --disable-static \
    --disable-tests \
    --enable-nc \
    --with-openssldir=/etc/ssl
}

build() {
  make
}

package() {
  make \
    DESTDIR="$cross" \
    install-strip

  ln -fs ../../cert.pem "$cross"/etc/ssl/certs/ca-certificates.crt

  # Remove libtool archives
  rm -fv \
    "$cross"/usr/lib/libcrypto.la \
    "$cross"/usr/lib/libssl.la \
    "$cross"/usr/lib/libtls.la
}
