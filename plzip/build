configure() {
  ./configure \
    --prefix=/usr \
    CXX=$CXX \
    CXXFLAGS="$CXXFLAGS" \
    LDFLAGS="$LDFLAGS"
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  # Compatibility symlinks
  ln -fs $nom "$SACD"/usr/bin/lzip
}
