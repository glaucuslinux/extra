prepare() {
  cd "$tmp"/$nom
}

package() {
  # Don't run `make install` as it builds and installs unnecessary stuff
  ln -fs "$dir"/usr/share/zoneinfo/Asia/Damascus "$dir"/etc/localtime

  zic -b fat -d "$dir"/usr/share/zoneinfo africa antarctica asia australasia \
    backward backzone etcetera europe factory northamerica southamerica
  zic -b fat -d "$dir"/usr/share/zoneinfo/posix africa antarctica asia \
    australasia backward backzone etcetera europe factory northamerica \
    southamerica
  zic -b fat -d "$dir"/usr/share/zoneinfo/right africa antarctica asia \
    australasia backward backzone etcetera europe factory northamerica \
    southamerica -L leapseconds

  zic -d "$dir"/usr/share/zoneinfo -p Asia/Damascus

  cp -fPp \
    iso3166.tab \
    leap-seconds.list \
    zone1970.tab \
    zone.tab \
    "$dir"/usr/share/zoneinfo
}
