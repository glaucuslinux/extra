package() {
  mkdir -p "$SACD"/usr/share/consolefonts
  cp -fPp \
    "$TMPD"/$nom/$nom-$ver/$nom-12x24.psfu \
    "$TMPD"/$nom/$nom-$ver/$nom-16x32.psfu \
    "$TMPD"/$nom/$nom-$ver/$nom-32x64.psfu \
    "$TMPD"/$nom/$nom-$ver/$nom-5x8.psfu \
    "$TMPD"/$nom/$nom-$ver/$nom-6x12.psfu \
    "$TMPD"/$nom/$nom-$ver/$nom-8x16.psfu \
    "$TMPD"/usr/share/consolefonts
}
