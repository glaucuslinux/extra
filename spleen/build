package() {
  mkdir -p "$dir"/usr/share/consolefonts
  cp -fPp \
    "$tmp"/$nom/$nom-$ver/$nom-12x24.psfu \
    "$tmp"/$nom/$nom-$ver/$nom-16x32.psfu \
    "$tmp"/$nom/$nom-$ver/$nom-32x64.psfu \
    "$tmp"/$nom/$nom-$ver/$nom-5x8.psfu \
    "$tmp"/$nom/$nom-$ver/$nom-6x12.psfu \
    "$tmp"/$nom/$nom-$ver/$nom-8x16.psfu \
    "$dir"/usr/share/consolefonts
}
