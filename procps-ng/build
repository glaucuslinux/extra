prepare() {
  for i in \
  0001-use-utmpx \
  0002-fix-utmp-file-path \
  0003-netbsd-curses-compatibility; do
    patch \
      -i "$CERD"/$nom/patches/glaucus/$i.patch \
      -p 0
  done

  ./autogen.sh
}

configure() {
  # `ncurses` support is enabled by default
  # `systemd` support is disabled by default
  LIBS='-lutmps -lskarnet' \
  glaucus-configure \
    --disable-nls \
    --disable-static \
    --disable-rpath \
    --enable-watch8bit \
    --disable-kill \
    --enable-sigwinch \
    --enable-wide-percent \
    --enable-wide-memory \
    --disable-modern-top \
    --disable-whining
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  # `pidwait` and `pkill` are identical to `pgrep`
  ln -fs pgrep "$SACD"/usr/bin/pidwait
  ln -fs pgrep "$SACD"/usr/bin/pkill
}
