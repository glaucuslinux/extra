prepare() {
  ./autogen.sh
}

configure() {
  glaucus-configure
}

build() {
  make
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip

  # Compatibility symlinks
  ln -fs lbzcmp "$dir"/usr/bin/bzcmp
  ln -fs lbzdiff "$dir"/usr/bin/bzdiff
  ln -fs lbzegrep "$dir"/usr/bin/bzegrep
  ln -fs lbzexe "$dir"/usr/bin/bzexe
  ln -fs lbzfgrep "$dir"/usr/bin/bzfgrep
  ln -fs lbzforce "$dir"/usr/bin/bzforce
  ln -fs lbzgrep "$dir"/usr/bin/bzgrep
  ln -fs lbzrecover "$dir"/usr/bin/bzip2recover
  ln -fs lbzless "$dir"/usr/bin/bzless
  ln -fs lbzmerge "$dir"/usr/bin/bzmerge
  ln -fs lbzmore "$dir"/usr/bin/bzmore
}
