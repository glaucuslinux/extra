prepare() {
  patch \
    -i "$core"/$nom/patches/alpine/ioctl.patch \
    -p 1
}

configure() {
  glaucus-cmake \
    -B build \
    -DENABLE_IPO=ON \
    -DENABLE_TESTING=OFF \
    -DHIREDIS_FROM_INTERNET=OFF \
    -DREDIS_STORAGE_BACKEND=OFF \
    -DZSTD_FROM_INTERNET=OFF
}

build() {
  make \
    -C build
}

package() {
  DESTDIR="$dir" \
  make \
    -C build \
    install/strip

  # Hardcoded `gcc` version number
  mkdir -p "$dir"/usr/lib/$nom
  for i in \
  c++ \
  c89 \
  c99 \
  cc \
  cpp \
  g++
  gcc \
  gcc-14.2.0 \
  $TARGET-c++ \
  $TARGET-c89 \
  $TARGET-c99 \
  $TARGET-cc \
  $TARGET-cpp \
  $TARGET-g++ \
  $TARGET-gcc \
  $TARGET-gcc-14.2.0; do
    ln -fs ../../bin/$nom "$dir"/usr/lib/$nom/$i
  done
}
