prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fnsv lbunzip2 "$SACD"/usr/bin/bunzip2
  ln -fnsv lbzcat "$SACD"/usr/bin/bzcat
  ln -fnsv $nom "$SACD"/usr/bin/bzip2
  ln -fnsv $nom "$SACD"/usr/bin/pbzip2
}
