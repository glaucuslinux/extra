prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  # Compatibility symlinks
  ln -fs lbunzip2 "$SACD"/usr/bin/bunzip2
  ln -fs lbzcat "$SACD"/usr/bin/bzcat
  ln -fs $nom "$SACD"/usr/bin/bzip2
  ln -fs $nom "$SACD"/usr/bin/pbzip2
}
