prepare() {
  ./bootstrap.sh
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fs $nom.pc "$SACD"/usr/lib/libobstack.pc
}
