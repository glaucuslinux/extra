prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/apply-disable.patch \
    -p 1

  ./autogen.sh
}

configure() {
  ac_cv_prog_swig_found=no \
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --without-python3
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
