prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/apply-disable.patch

  ./autogen.sh
}

configure() {
  ac_cv_prog_swig_found=no \
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --without-python3
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
