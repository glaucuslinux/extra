prepare() {
  mkdir -v build
  cd build
}

configure() {
  :
}

build() {
  CFLAGS="$CFLAGS -DMKSH_BINSHPOSIX -DMKSH_BINSHREDUCED" \
  sh "$SRCD"/mksh/mksh/Build.sh \
    -L \
    -r
}

check() {
  :
}

package() {
  mv -fv $nom "$SACD"/usr/bin
}
