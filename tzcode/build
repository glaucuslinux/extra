prepare() {
  cd "$tmp"/$nom
  cp -fPpR "$tmp"/tzdata/. .
}

configure() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

build() {
  make \
    CC=$CC \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    tzselect \
    zdump \
    zic
}

package() {
  mkdir -p "$dir"/usr/bin
  cp -fPp \
    tzselect \
    zdump \
    zic \
    "$dir"/usr/bin

  mkdir -p \
    "$dir"/usr/share/zoneinfo/posix \
    "$dir"/usr/share/zoneinfo/right
}
