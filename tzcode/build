prepare() {
  cd "$TMPD"/$nom
  cp -fPpR "$TMPD"/tzdata/* .
}

configure() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

build() {
  make \
    CC=$CC \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    tzselect \
    zdump \
    zic
}

package() {
  mkdir -p "$SACD"/usr/bin
  cp -fPp \
    tzselect \
    zdump \
    zic \
    "$SACD"/usr/bin

  mkdir -p \
    "$SACD"/usr/share/zoneinfo/posix \
    "$SACD"/usr/share/zoneinfo/right
}
