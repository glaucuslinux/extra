prepare() {
  cd "$TMPD"/$nom
  cp -afv "$TMPD"/tzdata/* .
}

configure() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  make \
    CC=$CC \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    tzselect \
    zdump \
    zic
}

check() {
  :
}

package() {
  if [ $BOOTSTRAP = yes ]; then
    cp -afv zic /usr/bin
  fi

  mkdir -pv "$SACD"/usr/bin
  cp -afv \
    tzselect \
    zdump \
    zic \
    "$SACD"/usr/bin

  mkdir -pv \
    "$SACD"/usr/share/zoneinfo/posix \
    "$SACD"/usr/share/zoneinfo/right
}
