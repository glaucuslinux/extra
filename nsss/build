prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-use-gnu-hash-style.patch \
    -p 0
}

configure() {
  ./configure \
    --prefix=/usr \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --enable-libc-includes
}

build() {
  make \
    strip
}

package() {
  make \
    DESTDIR="$dir" \
    install

  mkdir -p "$dir"/usr/lib/pkgconfig
  cp -fPp "$core"/$nom/files/$nom.pc "$dir"/usr/lib/pkgconfig
}
