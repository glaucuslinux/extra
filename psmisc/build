prepare() {
  ./autogen.sh
}

configure() {
  glaucus-configure \
    --disable-harden-flags \
    --disable-nls \
    --disable-rpath
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
