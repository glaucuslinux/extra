prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

build() {
  make
}

package() {
  make \
    prefix=/usr \
    bindir=/usr/bin \
    includedir=/usr/include \
    libdir=/usr/lib \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    DESTDIR="$dir" \
    install

  mv -f "$dir"/usr/lib/libargp.so "$dir"/usr/lib/libargp.so.0.0.0
  ln -fs libargp.so.0.0.0 "$dir"/usr/lib/libargp.so
  ln -fs libargp.so.0.0.0 "$dir"/usr/lib/libargp.so.0
}
