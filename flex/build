prepare() {
  ./autogen.sh

  touch doc/$nom.1
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-nls \
    --disable-rpath \
    --disable-libfl \
    --disable-bootstrap
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fs $nom "$SACD"/usr/bin/lex
}
