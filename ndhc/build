prepare() {
  patch \
    -i "$extra"/$nom/patches/glaucus/0001-fix-CFLAGS-and-LDFLAGS.patch \
    -p 0
}

build() {
  make
}

package() {
  mkdir -p "$dir"/usr/bin
  mv -f $nom "$dir"/usr/bin
}
