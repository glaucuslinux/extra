prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/CVE-2021-30218.patch \
    -p 1
  patch \
    -i "$CERD"/$nom/patches/alpine/CVE-2021-30219.patch \
    -p 1
}

build() {
  make \
    BINDIR=/usr/bin \
    MANDIR=/usr/share/man
}

package() {
  make \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    MANDIR=/usr/share/man \
    DESTDIR="$SACD" \
    install

  # Compatibility symlink
  ln -fs samu "$SACD"/usr/bin/ninja
}
