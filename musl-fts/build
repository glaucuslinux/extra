configure() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

build() {
  make \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    MANDIR=/usr/share/man/man3
}

package() {
  make \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    MANDIR=/usr/share/man/man3 \
    DESTDIR="$SACD" \
    install
}
