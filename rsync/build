prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-debug \
    --without-included-popt \
    --without-included-zlib
}

build() {
  make
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip

  mkdir -p "$dir"/etc
  cp -fPp "$extra"/$nom/files/${nom}d.conf "$dir"/etc

  cp -fPp support/r$nom "$dir"/usr/bin
}
