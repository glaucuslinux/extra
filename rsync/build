prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-debug \
    --without-included-popt \
    --without-included-zlib
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  mkdir -pv "$SACD"/etc
  cp -afv "$CERD"/$nom/files/${nom}d.conf "$SACD"/etc

  cp -afv support/r$nom "$SACD"/usr/bin
}
